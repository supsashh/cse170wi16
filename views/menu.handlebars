<!doctype html>

<html>
<head>
	<title>GoTo</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link href="/css/goto.css" rel="stylesheet">

    <script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/portfolio.pack.min.js"></script>
	<script src="/js/jquery.mobile.custom.min.js"></script>
	<script src="/js/goto.js"></script>
</head>

<body>
	<div class="container">
		<nav class="navbar navbar-default navbar-fixed-top">
			<a class="navbar-brand glyphicon glyphicon-search" aria-hidden="true" href="/search"></a>
			<a href="/index" class="navbar-brand"><img src="/images/gotologo.png" id="logo"/></a>
		</nav>
	</div>

	<div class="container portfolio-detail-container">
			<h4 class="center"><a href="/restaurant/{{id}}" class="glyphicon glyphicon-menu-left"></a>
				<a href="/restaurant/{{id}}">{{name}}</a></h4>
			<hr>
      {{#each menu-items}}
      	<div class='panel media' id={{item-id}}>
      		<div class='media-left'>
      			<a href='#'>
      				<img class='media-object portfolio-detail-pic' src='/images/{{item-image}}' />
		        </a>
		    </div>
		    <div class='media-body'>
		    	<h4 class='media-heading'>
						{{item-name}}
		       	</h4>
						<h3 class='media-heading'>
							{{price}}
						</h3>
						<h3 class='media-heading'>
							{{#if rating}}
								{{rating}} /5
							{{else}}
								No reviews yet!
							{{/if}}
						</h3>
		    </div>
		</div>
	  {{/each}}
    </div>

	<div id="footer">
	  <div class="col-xs-12 navbar-inverse navbar-fixed-bottom">
	  <div class="row bottom-nav" id="bottomNav">
	    <div class="col-xs-4 text-center"><a href="/index">
	    	<i class="glyphicon glyphicon-home"></i><br>Home</a>
	    </div>
	    <div class="col-xs-4 text-center"><a href="/newsfeed">
	    	<i class="glyphicon glyphicon-align-justify"></i><br>Newsfeed</a>
	    </div>
	    <div class="col-xs-4 text-center"><a href="/profile">
	    	<i class="glyphicon glyphicon-user"></i><br>Profile</a>
	    </div>
	  </div>
	  </div>
	</div>

	<script>
		var itemId = window.location.hash;
		if(itemId && itemId != "0"){
			$(itemId).css("background-color","#C0C0C0");
			$(window).scrollTop($(itemId).offset());
			$(itemId).focus();
		}
	</script>
</body>
</html>
